<div class="min-h-screen bg-gray-900 text-white p-6">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">Meus Chamados</h1>

    <% if @chamados.empty? %>
      <p class="text-center text-xl text-gray-400">Você ainda não abriu nenhum chamado.</p>
      <div class="mt-8 text-center">
        <%= link_to "Abrir Novo Chamado", new_chamado_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg inline-block transition duration-300 ease-in-out" %>
      </div>
    <% else %>
      <div class="overflow-x-auto bg-gray-800 rounded-lg shadow-md border border-green-500">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">ID</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Tipo</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Título</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @chamados.each do |chamado| %>
              <tr class="hover:bg-gray-700">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= chamado.id %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= chamado.tipo %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= chamado.titulo %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if chamado.status == "Fechado" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-500 text-white">
                      <%= chamado.status %>
                    </span>
                  <% else %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-500 text-gray-900">
                      <%= chamado.status %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "Visualizar", chamado_path(chamado), class: "text-blue-400 hover:text-blue-600 mr-4" %>
                  <%= button_to "Excluir", chamado_path(chamado), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este chamado?' }, class: "text-red-400 hover:text-red-600 bg-transparent border-none p-0 inline cursor-pointer" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <%= link_to "Voltar ao Dashboard", dashboard_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    </div>
  </div>
</div>